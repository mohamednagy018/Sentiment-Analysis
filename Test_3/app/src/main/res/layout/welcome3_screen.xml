<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#293442">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="345dp"
            android:layout_height="196dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="38dp"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fav_intro1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="345dp"
            android:layout_height="196dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/search_intro1"
            android:layout_marginTop="77dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="262dp"
            android:layout_height="65dp"
            android:text="Save your favourite news and categories"
            android:textColor="#a9e5fd"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            android:layout_marginTop="45dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/imageView3"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="240dp"
            android:layout_height="85dp"
            android:text="Search for your favourite subject"
            android:textColor="#a9e5fd"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            android:layout_marginTop="61dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/imageView4"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView4" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>